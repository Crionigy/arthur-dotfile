# Theme
# theme = catppuccin-mocha
theme = vesper
background-opacity = 0.8
background-blur-radius = 20

confirm-close-surface = false

# General Configs
window-new-tab-position = end
window-padding-x = 10
window-padding-y = 10
window-decoration = false
shell-integration = zsh
desktop-notifications = true
auto-update = check

# Fonts
font-family = "Hack Nerd Font Regular"
font-family-bold = "Hack Nerd Font Bold"
font-family-italic = "Hack Nerd Font Italic"
font-family-bold-italic = "Hack Nerd Font Bold Italic"
font-feature = -calt, -liga, -dlig

# Cursor
cursor-style = block
cursor-opacity = 0.9

# Keybinds
keybind = alt+shift+n=new_window

keybind = alt+p=toggle_split_zoom
keybind = alt+q=close_surface

keybind = ctrl+shift+k=new_split:up
keybind = ctrl+shift+j=new_split:down
keybind = ctrl+shift+h=new_split:left
keybind = ctrl+shift+l=new_split:right

keybind = alt+k=goto_split:top
keybind = alt+j=goto_split:bottom
keybind = alt+h=goto_split:left
keybind = alt+l=goto_split:right

keybind = alt+shift+t=new_tab
keybind = alt+shift+k=next_tab
keybind = alt+shift+j=previous_tab

keybind = alt+shift+h=move_tab:-1
keybind = alt+shift+l=move_tab:1

keybind = alt+shift+one=goto_tab:1
keybind = alt+shift+two=goto_tab:2
keybind = alt+shift+three=goto_tab:3
keybind = alt+shift+four=goto_tab:4
keybind = alt+shift+five=goto_tab:5
keybind = alt+shift+six=goto_tab:6
keybind = alt+shift+seven=goto_tab:7
keybind = alt+shift+eight=goto_tab:8
keybind = alt+shift+nine=goto_tab:9

keybind = super+alt+k=scroll_page_up
keybind = super+alt+j=scroll_page_down
keybind = super+alt+p=jump_to_prompt:-1
keybind = super+alt+n=jump_to_prompt:1
